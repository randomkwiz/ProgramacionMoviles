<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ImgQAFragment">

    <TextView
        android:id="@+id/imgQA_question"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:layout_weight="0.1"
        android:text="Elige una respuesta"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_group_imgs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <FrameLayout
            android:id="@+id/frame1"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@id/frame3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frame2"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageButton
                android:id="@+id/img1"
                android:src="@drawable/common_full_open_on_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame2"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@id/frame4"
            app:layout_constraintStart_toEndOf="@id/frame1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageButton
                android:id="@+id/img2"
                android:src="@drawable/common_full_open_on_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame3"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/frame1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/frame4"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageButton
                android:id="@+id/img3"
                android:src="@drawable/common_full_open_on_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame4"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/frame2"
            app:layout_constraintStart_toEndOf="@id/frame3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageButton
                android:id="@+id/img4"
                android:src="@drawable/common_full_open_on_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>